<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/previewGambar"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/actCekrek"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ambil Gambar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/previewGambar"/>

    <Button
        android:id="@+id/chooseFromGallery"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Pilih dari Perangkat"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/actCekrek"/>

    <Button
        android:id="@+id/viewHistory"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Lihat Riwayat"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chooseFromGallery"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/predictionResult"
        android:layout_below="@+id/viewHistory"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>